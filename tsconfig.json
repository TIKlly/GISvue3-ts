{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["element-plus/global"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@":["./src"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
  // "auto-imports.d.ts",
  // "components.d.ts",
  "src/**/*.ts", 
  "src/**/*.d.ts",
   "src/**/*.tsx", 
   "src/**/*.vue",
  //  "typings",
   "electron-main/**/*.ts",
  "electron-preload/**/*.ts", "firebase.ts", "firebase.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
